                                    <TextBlock Tag="tbCurrentPosition" Text="{Binding CurrentPosition, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Grid.Row="3" IsEnabled="False" />



                                </Grid>
                           
                            <Grid Margin="0,10" Grid.Column="2">
