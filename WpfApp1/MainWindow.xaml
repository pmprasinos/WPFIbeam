                                <TextBlock Text="Accel: " FontWeight="Bold" Grid.Row="0" Grid.Column="3" TextAlignment="Right"/>
                                <TextBox Tag="tbAcceleration" Text="{Binding Acceleration}" Grid.Column="4" Grid.Row="0" IsEnabled="False" />

                                <TextBlock Text="Deccel: " FontWeight="Bold" Grid.Row="1" Grid.Column="3" TextAlignment="Right"/>
