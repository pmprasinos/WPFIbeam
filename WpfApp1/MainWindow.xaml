<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:l='clr-namespace:_treeListView' 
        xmlns:ddes="http://schemas.devdept.com/winfx/2008/xaml/control" xmlns:ddgr="http://schemas.devdept.com/winfx/2008/xaml/graphics" x:Class="WpfApp1.MainWindow"
        mc:Ignorable="d"
        WindowStyle ="None"
        Title="MainWindow"  Loaded="FullScreen" PreviewMouseDown="viewportLayout1_OnPreviewMouseDown"  AllowsTransparency="True" d:DesignWidth="1305" d:DesignHeight="1285.3" >
    <Window.Resources>
        <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>



        <Style x:Key="ExpandCollapseToggleStyle"
           TargetType="{x:Type ToggleButton}">
            <Setter Property="Focusable"
              Value="False"/>
            <Setter Property="Width"
              Value="19"/>
            <Setter Property="Height"
              Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Width="19"
                    Height="13"
                    Background="Transparent">
                            <Border Width="9"
                      Height="9"
                      BorderThickness="1"
                      BorderBrush="#FF7898B5"
                      CornerRadius="1"
                      SnapsToDevicePixels="true">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,1">
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStop Color="White"
                                    Offset=".2"/>
                                            <GradientStop Color="#FFC0B7A6"
                                    Offset="1"/>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Path x:Name="ExpandPath"
                      Margin="1,1,1,1"
                      Fill="Black"
                      Data="M 0 2 L 0 3 L 2 3 L 2 5 L 3 5 L 3 3 L 5 3 L 5 2 L 3 2 L 3 0 L 2 0 L 2 2 Z"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                       Value="True">
                                <Setter Property="Data"
                        TargetName="ExpandPath"
                        Value="M 0 2 L 0 3 L 5 3 L 5 2 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <l:LevelToIndentConverter x:Key="LevelToIndentConverter"/>


        <DataTemplate x:Key="ReadOnly_TLVItem">
            <DockPanel>
                <ToggleButton x:Name="Expander" 
                      Style="{StaticResource ExpandCollapseToggleStyle}" 
                      Margin="{Binding Level,Converter={StaticResource LevelToIndentConverter},RelativeSource={RelativeSource AncestorType={x:Type l:TreeListViewItem}}}"
                      IsChecked="{Binding Path=IsExpanded,RelativeSource={RelativeSource AncestorType={x:Type l:TreeListViewItem}}}"
                      ClickMode="Press" />

                <TextBlock Text="{Binding Name}"/>

            </DockPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=HasItems,RelativeSource={RelativeSource AncestorType={x:Type l:TreeListViewItem}}}" 
                     Value="False">
                    <Setter TargetName="Expander"
                  Property="Visibility"
                  Value="Hidden"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="CellTemplate_Name">
            <DockPanel>

                <l:SpecialTextBox  Text="{Binding Value}" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" LostFocus="TLVTextBox_LostFocus" Tag="{Binding Property}" GotFocus="TLVTextBox_GotFocus" GotKeyboardFocus="TLVTextBox_GotKeyBoardFocus" PreviewMouseLeftButtonDown="SelectivelyIgnoreMouseButton" AxisNumber="{Binding Axis}" IsEnabled="{Binding UserCanEdit}"/>
               </DockPanel>

        </DataTemplate>


        <Style TargetType="{x:Type l:TreeListViewItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type l:TreeListViewItem}">
                        <StackPanel>
                            <Border Name="Bd"
                      Background="Transparent"
                      TextBlock.Foreground="White"
                      BorderThickness="0.5"
                      BorderBrush="Gray"
                      Padding="{TemplateBinding Padding}">
                                <GridViewRowPresenter x:Name="PART_Header" 
                                      Content="{TemplateBinding Header}" 
                                      Columns="{Binding Path=Columns,RelativeSource={RelativeSource AncestorType={x:Type l:TreeListView}}}" />
                            </Border>

                            <ItemsPresenter x:Name="ItemsHost" />

                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded"
                       Value="false">
                                <Setter TargetName="ItemsHost"
                        Property="Visibility"
                        Value="Collapsed"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="HasHeader"
                             Value="false"/>
                                    <Condition Property="Width"
                             Value="Auto"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Header"
                        Property="MinWidth"
                        Value="75"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="HasHeader"
                             Value="false"/>
                                    <Condition Property="Height"
                             Value="Auto"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PART_Header"
                        Property="MinHeight"
                        Value="19"/>
                            </MultiTrigger>
                            <Trigger Property="IsSelected"
                       Value="true">
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter TargetName="Bd"
            
                        Property="Background"
                        Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground"
                        Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected"
                             Value="true"/>
                                    <Condition Property="IsSelectionActive"
                             Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd"
                        Property="Background"
                        Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                <Setter Property="Foreground"
                        Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled"
                       Value="false">
                                <Setter Property="Foreground"
                        Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="{x:Type l:TreeListView}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type l:TreeListView}">
                        <DockPanel>
                            <GridViewHeaderRowPresenter Columns="{Binding Path=Columns,RelativeSource={RelativeSource TemplatedParent} }"
                                            DockPanel.Dock="Top" />
                            <ItemsPresenter/>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF0E0E0E" Offset="1"/>
                <GradientStop Color="#FF4B4B4B" Offset="0.373"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="11"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="11"/>
            <RowDefinition Height="152"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"><Run Text="Top"/></TextBlock>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Black" />
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" Background="Black" />
        <Grid Grid.Row="0">
            <ddes:ViewportLayout x:Name="viewPortLayout1" HorizontalAlignment="Stretch"  Margin="0,0,0,0" VerticalAlignment="Stretch" HideSmall="True" Loaded="ViewPortLayout1_OnLoad" PreviewMouseDown="viewportLayout1_OnPreviewMouseDown" SelectionChanged="viewportLayout1_SelectionChanged" Panel.ZIndex="1" ShowFps="True">
                <ddes:ViewportLayout.ProgressBar>
                    <ddes:ProgressBar Lighting="False"/>
                </ddes:ViewportLayout.ProgressBar>

                <ddes:ViewportLayout.Viewports>
                    <ddes:Viewport DisplayMode="Rendered" InitialView="Other">
                        <ddes:Viewport.Background>
                            <ddgr:BackgroundSettings BottomColor="#FF434752" StyleMode="LinearGradient" TopColor="#FF222329"/>
                        </ddes:Viewport.Background>
                        <ddes:Viewport.CoordinateSystemIcon>
                            <ddes:CoordinateSystemIcon Lighting="False" Visibility="Hidden"/>
                        </ddes:Viewport.CoordinateSystemIcon>
                        <ddes:Viewport.Camera>
                            <ddes:Camera Distance="600" ProjectionMode="Perspective" Rotation="0.0868240888334652, 0.150383733180435, 0.492403876506104, 0.852868531952443" Target="0, 0, 50" ZoomFactor="2"/>
                        </ddes:Viewport.Camera>
                        <ddes:Viewport.Grids>
                            <ddes:Grid ColorAxisY="#7F202020" ColorAxisX="#7F202020" Lighting="False" MajorLineColor="#7F5A5A5A" MajorLinesEvery="5" Step="5" Visible="False"/>
                        </ddes:Viewport.Grids>
                        <ddes:Viewport.OriginSymbol>
                            <ddes:OriginSymbol Lighting="False" Visibility="Hidden"/>
                        </ddes:Viewport.OriginSymbol>
                        <ddes:Viewport.Rotate>
                            <ddes:RotateSettings Enabled="True"/>
                        </ddes:Viewport.Rotate>
                        <ddes:Viewport.ToolBar>
                            <ddes:ToolBar>
                                <ddes:ToolBar.Buttons>
                                    <ddes:HomeToolBarButton/>
                                    <ddes:MagnifyingGlassToolBarButton/>
                                    <ddes:ZoomWindowToolBarButton/>
                                    <ddes:ZoomToolBarButton/>
                                    <ddes:PanToolBarButton/>
                                    <ddes:RotateToolBarButton/>
                                    <ddes:ZoomFitToolBarButton/>
                                </ddes:ToolBar.Buttons>
                            </ddes:ToolBar>
                        </ddes:Viewport.ToolBar>
                        <ddes:Viewport.ViewCubeIcon>
                            <ddes:ViewCubeIcon Lighting="False"/>
                        </ddes:Viewport.ViewCubeIcon>
                    </ddes:Viewport>
                </ddes:ViewportLayout.Viewports>
            </ddes:ViewportLayout>
            <Rectangle x:Name="ShadeRectangle1" Stretch="Fill" Grid.Row="1" Margin="10,10,10,0" Panel.ZIndex="100" Stroke="#FFB6B6B6" StrokeThickness="5"   >
                <Rectangle.Effect>
                    <BlurEffect Radius="10"/>
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="ModeLabel" Content="Simulation Mode Active" HorizontalAlignment="Left" Height="481" Margin="22,23,0,0" VerticalAlignment="Top" Width="419" Foreground="#FF272727" Panel.ZIndex="100" FontSize="24"/>
            <Button x:Name="SafteyResetButton" Content="Reset Saftey" HorizontalAlignment="Left" Height="74" Margin="337,23,0,0" VerticalAlignment="Top" Width="240" Background="#FF742F2F" BorderBrush="{x:Null}" BorderThickness="3" Foreground="Black" Panel.ZIndex="100" Opacity="0.5" FontSize="24" FontWeight="Bold" Click="ResetSaftey">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="40" Color="Red" ShadowDepth="0" Direction="315" RenderingBias="Quality" Opacity="100"/>
                </Button.Effect>
            </Button>
            <Button x:Name="VirtualModeButton" Content="Simulate Motion" HorizontalAlignment="Left" Height="74" Margin="615,23,0,0" VerticalAlignment="Top" Width="240" Background="#FF7E8D3D" BorderBrush="{x:Null}" BorderThickness="3" Foreground="Black" Panel.ZIndex="100" Opacity="0.5" FontSize="24" FontWeight="Bold" Click="EnableVirtualMode" ToolTip="No Error">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="20" Color="Yellow" ShadowDepth="0" />
                </Button.Effect>
            </Button>
            <Image x:Name="ErrorIcon"  Source="obj/Error.png" Panel.ZIndex="180" ToolTip="" Height="112" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="118" PreviewKeyUp="ErrorIcon_PreviewKeyUp" MouseEnter="ErrorIcon_MouseEnter" MouseLeave="ErrorIcon_MouseLeave"/>

        </Grid>
        <Grid x:Name="DataGrid_Prop" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition  />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" />

                <Button Content="Store AxisGroup State" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Height="46" Grid.ColumnSpan="2" Grid.Column="1" Background="Black" Foreground="White" FontSize="16" ClickMode="Press" BorderBrush="White" Grid.Row="0" Click="StoreAxisGrouState_Clicked"/>
                <l:TreeListView x:Name="TLV" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin ="0,5,0,46" Background="#FF814A4A" Foreground="Black" BorderBrush="White" ItemContainerStyle="{DynamicResource TreeViewItemStyle1}" FontSize="16" Panel.ZIndex="1000" SelectedItemChanged="TreeListView_SelectedItemChanged" PreviewMouseDown="TLV_PreviewMouseDown" Grid.Row="0" >
                    <l:TreeListView.Columns >
                        <GridViewColumn Header="" CellTemplate="{StaticResource ReadOnly_TLVItem}" Width="150" HeaderContainerStyle="{StaticResource myHeaderStyle}"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Property}" Width="100" CellTemplate="{StaticResource ReadOnly_TLVItem}" HeaderContainerStyle="{StaticResource myHeaderStyle}" TextBlock.Foreground="White" />
                        <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" Width="0" CellTemplate="{StaticResource ReadOnly_TLVItem}"  HeaderContainerStyle="{StaticResource myHeaderStyle}" TextBlock.Foreground="White" />
                        <GridViewColumn Header="PreparedValue" CellTemplate="{StaticResource CellTemplate_Name}" HeaderContainerStyle="{StaticResource myHeaderStyle}"/>


                    </l:TreeListView.Columns>
                </l:TreeListView>
            </Grid>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" />
            <Label x:Name="Label1" Content="Label" HorizontalAlignment="Left" Height="87" Margin="85,161,0,0" VerticalAlignment="Top" Width="300"/>



        </Grid>
        <Grid Grid.Row="4">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="JoyStick Setup" Click="Joystick_Setup" />

                </ContextMenu>
            </Grid.ContextMenu>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF131313" Offset="0"/>
                    <GradientStop Color="#FF404040" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="265" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="265" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="265" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" />
            <GridSplitter Grid.Column="3" Width="5" VerticalAlignment="Stretch" Background="Black" />
            <GridSplitter Grid.Column="5" Width="5" VerticalAlignment="Stretch" Background="Black" />
            <Image x:Name ="JS1" Margin="0,10,107,0"  Stretch="Fill" Grid.Column="0" Opacity="0.5" RenderTransformOrigin="0.142,0.873"/>
            <Image x:Name ="JS2"  Margin="0,0,112,0"  Stretch="Fill" Grid.Column="2" Opacity="0.5" HorizontalAlignment="Right" Width="148" RenderTransformOrigin="0.041,1" Height="142" VerticalAlignment="Bottom"/>
            <Image x:Name ="JS3"  Margin="0,0,112,0"  Stretch="Fill" Grid.Column="4" Opacity="0.5" HorizontalAlignment="Right" Width="148" Height="142" VerticalAlignment="Bottom"/>
            <Image x:Name ="JS4"  Margin="0,0,107,10"  Stretch="Fill" Grid.Column="6" Opacity="0.5" HorizontalAlignment="Right" Width="148" Height="142" VerticalAlignment="Bottom"/>
            <Label Content="AxisGroup: iBeam_1&#13;Twist: Elevation&#13;Up/Down: Pitch    " HorizontalAlignment="Right" Height="142" VerticalAlignment="Top" Width="107" Grid.Column="0" Foreground="White" HorizontalContentAlignment="Right"/>
            <Label Content="Label" HorizontalAlignment="Left" Height="142" Margin="153,0,0,0" VerticalAlignment="Top" Width="107" Grid.Column="2" Foreground="White"/>
            <Label Content="Label" HorizontalAlignment="Right" Height="142" VerticalAlignment="Top" Width="107" Grid.Column="4" Foreground="White"/>
            <Label Content="Label" HorizontalAlignment="Left" Height="142" Margin="158,0,0,0" VerticalAlignment="Top" Width="107" Grid.Column="6" Foreground="White"/>
            <Button Content="Button" HorizontalAlignment="Left" Height="83" Margin="0,69,0,0" VerticalAlignment="Top" Width="94" Click="closed"/>
        </Grid>
      

    </Grid>
</Window>
