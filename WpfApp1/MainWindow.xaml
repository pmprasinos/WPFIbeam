                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <DockPanel Background="{x:Null}" Tag="{Binding ID}" Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}, Path=IsSelected}">
